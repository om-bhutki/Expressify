<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/background">

    <!-- Title Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/doto"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:text="Register now to Improve your mental health"
        android:textColor="@color/vintage"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Name Field -->
    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Name"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:backgroundTint="@color/black"/>

    <!-- Email Field -->
    <EditText
        android:id="@+id/emailEditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Email"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:backgroundTint="@color/black"/>

    <!-- Password Field -->
    <EditText
        android:id="@+id/passwordEditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:backgroundTint="@color/black"/>

    <!-- Retype Password Field -->
    <EditText
        android:id="@+id/retypePasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Retype Password"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:backgroundTint="@color/black"/>

    <!-- Register Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginBottom="16dp"
        app:backgroundTint="@color/navy"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:cornerRadius="12dp"
        app:strokeColor="@color/colorPrimaryDark"
        app:strokeWidth="2dp"
        android:textColor="@color/white"
        android:padding="12dp" />

    <!-- Redirect to Login -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an account? Log in"
        android:layout_marginBottom="16dp"
        app:backgroundTint="@color/gradient"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:cornerRadius="12dp"
        app:strokeColor="@color/colorPrimaryDark"
        app:strokeWidth="2dp"
        android:textColor="@color/white"
        android:padding="12dp"
        />



</LinearLayout>
