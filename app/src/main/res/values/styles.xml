<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom theme for CalendarView -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/navy</item>
        <item name="colorPrimary">@color/black</item>
    </style>

    <!-- Style for dates in the CalendarView -->
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:weekNumberColor">@color/black</item>
    </style>

    <!-- Style for week labels -->
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Custom style for CalendarView Header (Month/Year) -->
    <style name="CalenderViewHeaderText" parent="android:TextAppearance.Material.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
